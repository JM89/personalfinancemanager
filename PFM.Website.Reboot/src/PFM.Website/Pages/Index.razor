@page "/"

@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization

<p>List of user claims</p>

<AuthorizeView>
    <Authorized>
        <table class="table">
            <thead>
                <tr>
                    <th>Key</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in context.User.Claims)
                {
                    <tr>
                        <td>@claim.Type</td>
                        <td>@claim.Value</td>
                    </tr>
                }
            </tbody>
        </table>
    </Authorized>
</AuthorizeView>