@using System.Runtime.InteropServices
@model PersonalFinanceManager.Models.Tax.TaxEditModel

@{
    Layout = "~/Views/Shared/_LayoutEditor.cshtml";
    ViewBag.PageTitle = Resources.TitleNames.TaxPages;
    ViewBag.FormTitle = Resources.TitleNames.TaxCreate;
}

@section BreadCrumbSection
{

}

@section EditorSection
{
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.FieldEditor(model => model.Description)
            
            @Html.DateFieldEditor(model => model.StartDate)
            
            @Html.DateFieldEditor(model => model.EndDate)
            
            @Html.FieldEditor(model => model.Amount)
            
            @Html.ListEditor(model => model.TaxTypeId, @Model.AvailableTaxTypes)

            @Html.ListEditor(model => model.CurrencyId, @Model.AvailableCurrencies)
            
            @Html.ListEditor(model => model.CountryId, @Model.AvailableCountries)
            
            @Html.ListEditor(model => model.FrequenceOptionId, @Model.AvailableFrequenceOptions)
            
            @Html.FieldEditor(model => model.Frequence)

            @CustomHelpers.FormFooterButtons("Tax")
            
        </div>
    }
}

@section ScriptsSection
{
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script src="~/Scripts/custom/Tax.js"></script>
    
    <script type="text/javascript">
        $(function () {
            initializeForm();
        });
    </script>
}
