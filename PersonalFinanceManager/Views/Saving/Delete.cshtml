@model PersonalFinanceManager.Models.Saving.SavingEditModel

@{
    Layout = "~/Views/Shared/_LayoutConfirmDeletion.cshtml";
    ViewBag.PageTitle = "Manage savings";
    ViewBag.DetailsTitle = "Delete saving";
    ViewBag.ConfirmationMessage = "Are you sure you want to delete this saving?";
}

@section BreadCrumbSection
{
    <li>
        @ViewBag.AccountName
    </li>
    <li>
        Mouvements
    </li>
    <li class="active">
        <strong>@ViewBag.FormTitle</strong>
    </li>
}

@section AccountDetails
{
    <div class="alert alert-info" role="alert">
        <table>
            <tr>
                <td><strong>@Html.DisplayName("Current Amount:")</strong></td>
                <td>@ViewBag.CurrentAmount</td>
            </tr>
        </table>
    </div>
}

@section DetailsSection
{
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.DateSaving)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayedDateSaving)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TargetInternalAccountId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TargetInternalAccountName)
        </dd>
    </dl>

}

@section DeletionButtonSection
{
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <input type="hidden" value="@ViewBag.AccountId" />

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary btn_delete" /> 
            @Html.ActionLink("Back to List", "Index", new { accountId = @ViewBag.AccountId }, htmlAttributes: new { @class = "btn btn-default" })
        </div>
    }
}