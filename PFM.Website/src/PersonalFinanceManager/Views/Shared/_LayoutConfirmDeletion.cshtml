@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>@ViewBag.PageTitle</h2>
        <ol class="breadcrumb">
            @RenderSection("BreadCrumbSection", false)
        </ol>
        <br />
    </div>
    <div class="col-lg-3">
        <br />
        @RenderSection("AccountDetails", false)
    </div>
</div>

<div class="row wrapper wrapper-content">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>@ViewBag.DetailsTitle</h5>
            </div>
            <div class="ibox-content">
                <div class="alert alert-danger" role="alert">@ViewBag.ConfirmationMessage</div>
                <div>
                    @RenderSection("DetailsSection", true)
                    @RenderSection("DeletionButtonSection", true)
                </div>
            </div>
        </div>
    </div>
</div>
