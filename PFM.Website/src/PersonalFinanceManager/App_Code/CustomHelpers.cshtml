@helper ShowArrow(decimal value1, decimal value2)
{
    var Html = ((System.Web.Mvc.WebViewPage)WebPageContext.Current.Page).Html;

    Html.Raw("&nbsp;&nbsp;");

    if (value1 > value2)
    {
        <i class="fa fa-level-down" aria-hidden="true" style="color:green"></i>
    }
    else if (value1 < value2)
    {
        <i class="fa fa-level-up" aria-hidden="true" style="color:red"></i>
    }
    else
    {
        <i class="fa fa-minus" aria-hidden="true" style="color:grey"></i>
    }

}

@helper FormFooterButtons(string controllerName)
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Resources.ButtonNames.AddSaveButton" class="btn btn-primary btn_save" />
            <a class="btn btn-default" href="/@controllerName/Index">@Resources.ButtonNames.CancelButton</a>
        </div>
    </div>
}

@helper DisplayAmountDifference(decimal amount, string displayedAmount)
{
    <br />
    if (@amount < 0)
    {
        <label style="font-size: x-small; color:green">(@displayedAmount <i class="fa fa-caret-down" aria-hidden="true"></i>)</label>
    }
    else if (@amount > 0)
    {
        <label style="font-size: x-small; color:red">(@displayedAmount <i class="fa fa-caret-up" aria-hidden="true"></i>)</label>
    }
    else
    {
        <label style="font-size: x-small;"></label>
    }
}