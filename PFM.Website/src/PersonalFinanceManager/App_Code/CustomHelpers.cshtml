@helper ListButtons(int id, bool canBeDeleted, bool canBeEdited, string controllerName, string tooltipDeleteButton, string description)
{
    var Html = ((System.Web.Mvc.WebViewPage)WebPageContext.Current.Page).Html;

    if (@canBeEdited)
    {
        <a href="/@controllerName/Edit/@id" title="@Resources.ButtonNames.EditTooltip" class="btn_edit"><i class="fa fa-pencil-square-o"></i></a>
    }

    Html.Raw("|");

    if (@canBeDeleted)
    {
        <a title="@Resources.ButtonNames.DeleteTooltip" class="btn_delete" data-toggle="modal" data-target="#DeletionConfirmationBox" data-description="@description" data-url="/@controllerName/Delete/@id"><i class="fa fa-trash-o"></i></a>
    }
    else
    {
        <i class="fa fa-trash-o" style="color: darkgrey;" title="@tooltipDeleteButton"></i>
    }
}

